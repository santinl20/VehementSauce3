#include <kipr/botball.h>
//declare variables
int l_motor = 0;
int r_motor = 2;
int speed = 40;
int pause = 2000;
int arm_pos = 750;
int lspeed = 10;
int rspeed = 10;
int IR = 0;									//infared emitter sensor
int f_et = 5;         						//front sensor
int target = 2700;							//indicates wall is too close
int zone = 1600;							//when black surface is indicated

int main()
{
	find_line();
    follow_line();
    enable_servos();
	set_servo_position(0, 1024);
	msleep(500);
	set_servo_position(0, 100);
	msleep(500);
	set_servo_position(0, 1753);
	msleep(500);
    set_servo_position(0, 270);
    msleep(500);
	disable_servos();
    return 0;
}

			//function//
	void forward(){
         motor(l_motor,speed);
         motor(r_motor,speed);
     }
    void t_left(){
        motor(l_motor, lspeed+70);
        motor(r_motor, 0);
    }
    void t_right(){
        motor(r_motor, rspeed+70);
        motor(l_motor, 0);
    }
	void find_line(){
    	printf("Find the Black Line\n");
    	while(analog(IR)<zone){					  //true statement: move forward to find black line
			forward();
    		ao();
		}
    }
    void follow_line(){
        printf("Follow the Line\n");
        while(analog(f_et)<target){
        										 //forward();
        if(analog(IR)>zone){                     //number >= zone = go forward and right
         	printf("off line\n");
         		t_left();
    	}     
    	if(analog(IR)<zone){  		              //when number < target = go forward and left
      		printf("on line\n");
        		t_right();                          //action will make robot do a serpetine and follow black line
    	} 
    }
        ao();
    }
