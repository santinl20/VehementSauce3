#include <kipr/botball.h>
//declare variables
int l_motor = 0;
int r_motor = 2;
int speed = 50;
int pause = 2000;
int arm_pos = 750;
int lspeed = 30;
int rspeed = 30;
int turntime = 1000;
int s_et = 0;         //side sensor
int f_et = 5;         //front sensor
int target = 2900     //indicates wall is too close

int main()
   wall follow();     //a single function
 return 0;
}
         //function//
     void forward(){
         motor(l_motor,speed);
         motor(r_motor,speed);
     }
    void t_left(){
        motor(l_motor, lspeed);
        msleep(turntime);
        ao();
    }
    void t_right(){
        motor(r_motor, rspeed);
        msleep(turntime);
        ao();
    }
    void follow wall(){
    while(analog(f_et))>target{           //wall detected will turn left...when not detected follow if conditions 
      t_left();
      if(analog(s_et))>target{            //number > target = go forward and left
         printf("side sensor engaged\n");
         forward();
         t_left();
      }     
      if(analog(s_et))<target{            //when number < target = go forward and right
      forward();
      t_right();                          //action will make robot do a serpetine
      }
  }
