#include <kipr/botball.h>
//declare variables
int l_motor = 0;
int r_motor = 2;
int speed = 50;
int pause = 2000;
int arm_pos = 750;
int lspeed = 30;
int rspeed = 30;
int turntime = 1000;
int s_et = 0;         						//side sensor
int f_et = 5;         						//front sensor
int target = 2800;     						//indicates wall is too close

int main(){
	follow_wall();							//a single function
 return 0;
}

         //function//
    void t_left(){
        motor(l_motor, lspeed);
        motor(r_motor, lspeed+20);
    }
    void t_right(){
        motor(r_motor, rspeed);
        motor(r_motor, rspeed+20);
    }
    void follow_wall(){
    while(analog(f_et)<target){           //wall detected will turn left...when not detected follow if conditions 
      if(analog(s_et)<target){            //number < target = go forward and right
         printf("side sensor engaged\n");
         t_right();
      }     
      if(analog(s_et)>target){  		//when number > target = go forward and left
      printf("s sensor engaged\n");
          t_left();                          //action will make robot do a serpetine
      }
  }
    }
